<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.development.mydaggerhiltmvvm.view.fragment.dashboard_fragment.PictureInPictureFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.dashboard_fragment.PictureInPictureFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_video_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Video One"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/dimens_20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_video_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Video Two"
            app:layout_constraintTop_toBottomOf="@+id/bt_video_one"
            app:layout_constraintStart_toStartOf="@+id/bt_video_one"
            app:layout_constraintEnd_toEndOf="@+id/bt_video_one"
            android:layout_marginTop="@dimen/dimens_10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_video_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Video Three"
            app:layout_constraintTop_toBottomOf="@+id/bt_video_two"
            app:layout_constraintStart_toStartOf="@+id/bt_video_one"
            app:layout_constraintEnd_toEndOf="@+id/bt_video_one"
            android:layout_marginTop="@dimen/dimens_10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>